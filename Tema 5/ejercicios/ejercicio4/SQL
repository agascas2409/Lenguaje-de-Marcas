<?xml version="1.0" encoding="UTF-8"?>

            CREATE TABLE Autores{
                id INT PRYMARY KEY,nombre VARCHAR(255)
            };
        
            CREATE TABLE Libros{
                id INT PRYMARY KEY,titulo VARCHAR(255),idAutor INT REFERENCES Autores(id)
            };
        
